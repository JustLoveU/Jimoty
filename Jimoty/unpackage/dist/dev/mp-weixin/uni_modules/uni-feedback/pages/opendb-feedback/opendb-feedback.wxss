
.uni-container {
		padding: 20rpx 40rpx;
		margin: 20rpx;
		background-color: white;
		border-radius: 15rpx;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
}
.des {
		padding: 20rpx 0;
		font-size: 28rpx;
		margin-bottom: 30rpx;
		color: #666;
}
.uni-input-border,
	.uni-textarea-border {
		width: 100%;
		font-size: 14px;
		color: #666;
		border: 1px #e5e5e5 solid;
		border-radius: 5px;
		box-sizing: border-box;
}
.uni-input-border {
		padding: 0 10px;
		height: 35px;
}
.uni-textarea-border {
		padding: 10px;
		height: 80px;
}
.uni-button-group {
		margin-top: 50px;
		margin-bottom: 30px;

		display: flex;

		justify-content: center;
}
.uni-button {
		width: 184px;
		padding: 12px 20px;
		font-size: 14px;
		border-radius: 4px;
		line-height: 1;
		margin: 0;
}
