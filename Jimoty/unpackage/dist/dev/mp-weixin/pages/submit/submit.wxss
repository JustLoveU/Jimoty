.submit-top {
  margin-top: 20rpx;
  background-color: white;
  padding: 20rpx;
}
.submit-top .submit-top-des {
  font-size: 32rpx;
  line-height: 70rpx;
}
.submit-top .submit-top-btu {
  width: 300rpx;
  height: 150rpx;
  border: 2px solid #d1d1d1;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit-top .submit-top-btu:active {
  opacity: 0.7;
}
.submit-top .submit-top-btu .submit-top-btu-img {
  width: 70rpx;
  height: 70rpx;
}
.submit-top .submit-top-btu .submit-top-btu-des {
  font-weight: 600;
}
.submit-grid {
  margin-top: 20rpx;
  background-color: white;
  padding: 20rpx;
}
.submit-grid .submit-grid-des {
  font-size: 32rpx;
}
.submit-grid .submit-grids {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.submit-grid .submit-grids .submit-grid {
  width: 140rpx;
  height: 140rpx;
  border: 2px solid #d1d1d1;
}
.submit-grid .submit-grids .submit-grid:active {
  opacity: 0.7;
}
.submit-grid .submit-grids .submit-grid .submit-grid-img {
  width: 60rpx;
  height: 60rpx;
}
.submit-grid .submit-grids .submit-grid .submit-grid-des {
  font-weight: 600;
  font-size: 25rpx;
}
.submit-imgs {
  padding: 20rpx 0;
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
}
.submit-imgs .submit-img {
  width: 100%;
  height: 100%;
}
.xuanfu-btu {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #219f62;
  box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.xuanfu-btu:active {
  opacity: 0.7;
}
.xuanfu-btu .xuanfu-btu-pen {
  width: 70rpx;
  height: 70rpx;
}
.xuanfu-btu .xuanfu-btu-des {
  font-weight: 600;
  color: white;
}