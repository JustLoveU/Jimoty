.categery {
  padding: 20rpx;
  background-color: white;
}
.categery-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #c3c3c3;
}
.categery-item .categery-item-left {
  display: flex;
  align-items: center;
}
.categery-item .categery-item-left .categery-item-left-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.categery-item .categery-item-left .categery-item-left-text-title {
  font-weight: 600;
  font-size: 30rpx;
}
.breadcrumb {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  background-color: white;
  position: relative;
}
.breadcrumb .over {
  position: absolute;
  right: 30rpx;
}
.breadcrumb .breadcrumb-item {
  position: relative;
  font-size: 24rpx;
  color: #5b5b5b;
  line-height: 50rpx;
  text-align: right;
}
.breadcrumb .breadcrumb-item:not(:first-child)::before {
  content: ">";
  margin-left: 15rpx;
}
.breadcrumb .breadcrumb-item:last-child {
  color: #5ba0ca;
}