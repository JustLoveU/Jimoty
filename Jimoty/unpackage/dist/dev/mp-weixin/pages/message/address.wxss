.Myaddress {
  padding: 20rpx;
}
.address {
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 10px;
}
.address .address-other {
  border-top: 1px solid #e1e1e1;
  height: 50rpx;
  display: flex;
  align-items: center;
  padding-top: 10rpx;
  justify-content: space-between;
  font-size: 22rpx;
  color: #838383;
}
.address .address-other .address-other-left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address .address-other .address-other-left .address-other-left-dot {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #e1e1e1;
}
.address .address-other .address-other-left .address-other-left-text {
  margin-left: 20rpx;
}
.address .address-main {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.address .address-top-name {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  font-weight: 600;
  font-size: 24rpx;
  color: #61b18e;
  background-color: #a3f3c3;
}
.address .address-center {
  flex: 1;
  margin-left: 20rpx;
}
.address .address-center .address-center-np {
  display: flex;
  align-items: center;
}
.address .address-center .address-center-np .address-center-name {
  font-size: 24rpx;
}
.address .address-center .address-center-np .address-center-tip {
  border-radius: 10rpx;
  border: 1px solid #a3f3c3;
  color: #a3f3c3;
  margin-left: 15rpx;
  padding: 3rpx;
  font-size: 18rpx;
}
.address .address-center .address-center-des {
  color: #838383;
  height: 40rpx;
  font-size: 22rpx;
}
.address .address-left {
  width: 35rpx;
  height: 35rpx;
}
.page-bottom {
  display: flex;
  align-items: center;
  width: 100%;
  font-weight: 600;
  position: fixed;
  background-color: white;
  padding: 20rpx;
  bottom: 30rpx;
  font-size: 28rpx;
}
.page-bottom .con-address {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 20px;
  background-color: #c0c0c0;
}
.page-bottom .add-address {
  flex: 1;
  margin-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 20px;
  background-color: #71d98b;
}