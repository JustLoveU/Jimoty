.navbar {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  box-shadow: 3rpx 3rpx 5rpx rgba(0, 0, 0, 0.3);
}
.navbar .navbar-nav {
  width: 33%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #555555;
}
.navbar .active {
  border-bottom: 3px solid #249d62;
