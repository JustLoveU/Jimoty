.navbar {
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  box-shadow: 3rpx 3rpx 5rpx rgba(0, 0, 0, 0.3);
}
.navbar .navbar-nav {
  width: 25%;
  height: 120rpx;
  font-size: 32rpx;
  color: #555555;
}
.navbar .navbar-nav .navbar-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}
.navbar .active {
  border-bottom: 3px solid #249d62;
  color: #249d62;
}
.comments {
  padding: 20rpx;
  background-color: white;
}
.comments .comment {
  padding: 20rpx 0;
  border-bottom: 1px solid #c6c6c6;
}
.comments .comment-user {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.comments .comment-user-left {
  display: flex;
  align-items: center;
}
.comments .comment-user-left .comment-user-image {
  width: 80rpx;
  height: 80rpx;
}
.comments .comment-user-left .comment-user-image .comment-user-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.comments .comment-user-left .comment-user-name {
  margin-left: 20rpx;
}
.comments .comment-type {
  padding: 10rpx 20rpx;
  border: 1px solid #249d62;
  border-radius: 20px;
  font-size: 24rpx;
}
.comments .comment-post {
  margin-top: 15rpx;
}
.comments .comment-content {
  margin-top: 15rpx;
}
.comments .comment-time {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}