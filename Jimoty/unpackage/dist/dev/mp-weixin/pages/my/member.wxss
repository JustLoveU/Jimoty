.member-title {
  padding: 20rpx;
  font-size: 28rpx;
  color: #515151;
}
.oprate {
  padding: 20rpx;
  background-color: white;
}
.oprate .oprate-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
}
.oprate .oprate-item .oprate-left {
  display: flex;
  align-items: center;
}
.oprate .oprate-item .oprate-left .oprate-left-image {
  width: 90rpx;
  height: 90rpx;
  border: 1px solid #c5c5c5;
  box-shadow: 0 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.oprate .oprate-item .oprate-left .oprate-left-image .oprate-left-image-img {
  width: 60rpx;
  height: 60rpx;
}
.oprate .oprate-item .oprate-left .oprate-left-title {
  margin-left: 15rpx;
  font-size: 36rpx;
  color: #515151;
}
.oprate .active {
  background-color: rgba(40, 207, 110, 0.3);
}
.member-bottom {
  padding: 40rpx;
  background-color: white;
}
.member-bottom .member-bottom-tip {
  margin: 10rpx;
  width: 100%;
  text-align: center;
}
.member-bottom .member-bottom-btu {
  text-align: center;
  line-height: 90rpx;
  width: 100%;
  height: 90rpx;
  border-radius: 10rpx;
  font-size: 38rpx;
  margin-bottom: 40rpx;
}
.member-bottom .btu1 {
  background-color: #1d924e;
  color: white;
}
.member-bottom .btu2 {
  border: 1px solid #1d924e;
  color: #1d924e;
}