.goods {
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}
.goods .good {
  display: flex;
  background-color: white;
  padding: 20rpx;
  border-bottom: 1px solid #c7c7c7;
}
.goods .good .good-img-box {
  position: relative;
  width: 170rpx;
  height: 170rpx;
}
.goods .good .good-img-box .good-image {
  width: 170rpx;
  height: 170rpx;
  border-radius: 8rpx;
}
.goods .good .good-img-box .goodd-shadow {
  position: absolute;
  bottom: 0%;
  left: 0%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  height: 40rpx;
}
.goods .good .good-img-box .goodd-shadow .shadow-text {
  color: white;
  width: 100%;
  opacity: 1;
  z-index: 99;
  position: absolute;
  text-align: center;
  font-size: 22rpx;
  line-height: 40rpx;
}
.goods .good .good-des {
  margin-left: 20rpx;
  padding: 0 10rpx;
}
.goods .good .good-des .good-des-name {
  font-weight: 600;
  line-height: 50rpx;
  font-size: 30rpx;
}
.goods .good .good-des .good-liulan,
.goods .good .good-des .good-time {
  margin-top: 10rpx;
  color: #8b8b8b;
  font-size: 26rpx;
}
.goods .active {
  background-color: #00d67d;
  border-radius: 20px;
}
.my-btu {
  position: fixed;
  bottom: 0rpx;
  background-color: white;
  width: 100%;
  padding-bottom: 50rpx;
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  z-index: 10;
}
.my-btu .btu {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20px;
  text-align: center;
  font-size: 32rpx;
  color: white;
  background-color: #00b26a;
}