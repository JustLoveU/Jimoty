.navbar {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  box-shadow: 3rpx 3rpx 5rpx rgba(0, 0, 0, 0.3);
}
.navbar .navbar-nav {
  width: 33%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #555555;
}
.navbar .active {
  border-bottom: 3px solid #249d62;
  color: #249d62;
}
.pageindex1 .goods {
  display: flex;
  flex-direction: column;
}
.pageindex1 .goods .good {
  display: flex;
  background-color: white;
  padding: 20rpx;
  border-bottom: 1px solid #c7c7c7;
}
.pageindex1 .goods .good .good-operate {
  position: absolute;
  right: 20rpx;
}
.pageindex1 .goods .good .good-operate .good-operate-btu {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #bfbfbf;
  border-radius: 5px;
  margin: 20rpx 0;
}
.pageindex1 .goods .good .good-operate .good-operate-btu:active {
  opacity: 0.7;
}
.pageindex1 .goods .good .good-img-box {
  position: relative;
  width: 170rpx;
  height: 170rpx;
}
.pageindex1 .goods .good .good-img-box .good-image {
  width: 170rpx;
  height: 170rpx;
  border-radius: 8rpx;
}
.pageindex1 .goods .good .good-img-box .goodd-shadow {
  position: absolute;
  bottom: 0%;
  left: 0%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  height: 40rpx;
}
.pageindex1 .goods .good .good-img-box .goodd-shadow .shadow-text {
  color: white;
  width: 100%;
  opacity: 1;
  z-index: 99;
  position: absolute;
  text-align: center;
  font-size: 22rpx;
  line-height: 40rpx;
}
.pageindex1 .goods .good .good-des {
  margin-left: 20rpx;
  padding: 0 10rpx;
}
.pageindex1 .goods .good .good-des .good-des-name {
  font-weight: 600;
  line-height: 50rpx;
  font-size: 30rpx;
  max-width: 300rpx;
}
.pageindex1 .goods .good .good-des .good-liulan,
.pageindex1 .goods .good .good-des .good-time {
  margin-top: 10rpx;
  color: #8b8b8b;
  font-size: 26rpx;
}
