.dialog {
  padding: 20rpx;
  background-color: white;
}
.dialog .dialog-btu {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dialog .dialog-btu .btu1 {
  width: 120rpx;
  height: 70rpx;
  border-radius: 20px;
}
.dialog .dialog-btu .btu2 {
  width: 120rpx;
  height: 70rpx;
  border-radius: 20px;
  background-color: #349b6d;
  color: white;
}
.search-body {
  background-color: #fff;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
}
.search-body .word-container_body-info {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}
.search-body .search-hot {
  padding: 0 20rpx 20rpx 20rpx;
  width: 100%;
}
.search-body .search-hot .search-hot-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dedede;
  margin-bottom: 20rpx;
}
.search-body .search-hot .search-hot-top .search-hot-btu {
  width: 140rpx;
}
.search-body .search-hot .search-hot-top .search-hot-title {
  font-size: 30rpx;
}
.search-body .search-hot .search-hot-item {
  border-bottom: 1px solid #dedede;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search-body .search-hot .search-hot-item .search-hot-item-left {
  padding: 20rpx 0;
}
.search-body .search-hot .search-hot-item .search-hot-item-left .search-hot-item-left-text {
  font-size: 30rpx;
  color: black;
}
.search-body .search-hot .search-hot-item .search-hot-item-left .search-hot-item-left-sub {
  color: #9c9c9c;
  font-size: 24rpx;
  margin-top: 15rpx;
}
.search-body .search-hot .search-hot-item:active {
  opacity: 0.7;
}