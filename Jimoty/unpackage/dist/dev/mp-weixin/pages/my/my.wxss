.beian {
  padding: 20rpx;
  width: 100%;
  text-align: center;
}
.beian .beian-text {
  color: #9e9e9e;
}
.center-list .center-list-item {
  margin-top: 30rpx;
}
.center-list .center-list-item .center-list-item-row {
  width: 100%;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
  background-color: white;
}
.center-list .center-list-item .center-list-item-row .center-list-item-row-left {
  display: flex;
  align-items: center;
}
.center-list .center-list-item .center-list-item-row .center-list-item-row-left .center-list-item-row-left-image {
  width: 50rpx;
  height: 50rpx;
}
.center-list .center-list-item .center-list-item-row .center-list-item-row-left .center-list-item-row-text {
  margin-left: 30rpx;
  font-size: 30rpx;
}
.center {
  flex: 1;
  flex-direction: column;
}
.userInfo {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 20rpx;
  margin-top: 10rpx;
}
.defaultAvatarUrl {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  background-color: #007aff;
  justify-content: center;
  border-radius: 20px;
  align-items: center;
}
.logo-title {
  margin-left: 40rpx;
}
.logo-title .uer-name {
  height: 100rpx;
  font-size: 38rpx;
  color: #000;
}
.logo-title .uer-name .uer-name-top {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.logo-title .uer-name .uer-name-bottom {
  font-size: 26rpx;
}